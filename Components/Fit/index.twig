<section class="ecocart-fit">
    <div class="container">
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-fit__grid">
            {% for item in list %}
                <div class="ecocart-fit__card">
                    <div class="ecocart-fit__card-img">
                        <img
                            class="lazyload"
                            data-src="{{ item.image.src }}"
                            data-sizes="auto"
                            alt="{{ item.image.alt|e }}"
                        />
                    </div>
                    <div class="ecocart-fit__card-content">
                        <h2>{{ item.title }}</h2>
                        <p>{{ item.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="ecocart-fit__link">
            <a class="btn btn--blue--dark" href="{{ link.url }}">{{ link.title }}</a>
        </div>
    </div>
</section>