<section class="ecocart-enjoy">
    <div class="container">
        <div class="ecocart-enjoy__dot-desktop">
            <img
                class="lazyload"
                data-src="{{ dot_desktop }}"
                data-sizes="auto"
                alt="dot desktop"
            />
        </div>
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-enjoy__row">
            <div class="ecocart-enjoy__col">
                <div class="ecocart-enjoy__img">
                    {% if animation == 'none' %}
                        <img
                            class="lazyload"
                            data-src="{{ image_1.src }}"
                            data-sizes="auto"
                            alt="{{ image_1.alt|e }}"
                        />
                    {% else %}
                        <div id="js-ecocart-enjoy__{{ animation }}-animation-1" class="ecocart-lottie" data-animation-src="{{ animation_list[animation][0] }}"></div>
                    {% endif %}
                </div>
                <div class="ecocart-enjoy__content">
                    <h3>{{ title_1 }}</h3>
                    <p>{{ content_1 }}</p>
                </div>
            </div>
            <div class="ecocart-enjoy__col">
                <div class="ecocart-enjoy__img">
                    {% if animation == 'none' %}
                        <img
                            class="lazyload"
                            data-src="{{ image_2.src }}"
                            data-sizes="auto"
                            alt="{{ image_2.alt|e }}"
                        />
                    {% else %}
                        <div id="js-ecocart-enjoy__{{ animation }}-animation-2" class="ecocart-lottie" data-animation-src="{{ animation_list[animation][1] }}"></div>
                    {% endif %}
                </div>
                <div class="ecocart-enjoy__content">
                    <h3>{{ title_2 }}</h3>
                    <p>{{ content_2 }}</p>
                </div>
            </div>
            <div class="ecocart-enjoy__col">
                <div class="ecocart-enjoy__img">
                    {% if animation == 'none' %}
                        <img
                            class="lazyload"
                            data-src="{{ image_3.src }}"
                            data-sizes="auto"
                            alt="{{ image_3.alt|e }}"
                        />
                    {% else %}
                        <div id="js-ecocart-enjoy__{{ animation }}-animation-3" class="ecocart-lottie" data-animation-src="{{ animation_list[animation][2] }}"></div>
                    {% endif %}
                </div>
                <div class="ecocart-enjoy__content">
                    <h3>{{ title_3 }}</h3>
                    <p>{{ content_3 }}</p>
                </div>
            </div>
        </div>
    </div>
</section>