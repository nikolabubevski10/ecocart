<section class="ecocart-price-hero">
    <div class="container">
        <div class="ecocart-price-hero__content">
            <h1><div class="vertical-dot"></div>{{ title }}</h1>
            <p>{{ content }}</p>
        </div>
        <div class="ecocart-price-hero__card-row">
            <div class="ecocart-price-hero__card-col">
                <div class="ecocart-price-hero__card">
                    <div class="ecocart-price-hero__card-header">
                        <img
                            class="lazyload"
                            data-src="{{ logo_1.src }}"
                            data-sizes="auto"
                            alt="{{ logo_1.alt|e }}"
                        />
                    </div>
                    <div class="ecocart-price-hero__card-content">
                        <h3>{{ title_1 }}</h3>
                        <p>{{ content_1 }}</p>
                        <div class="ecocart-price-hero__card-link">
                            <a class="btn btn--blue" href="{{ link_1.url }}">{{ link_1.title }}</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ecocart-price-hero__card-col">
                <div class="ecocart-price-hero__card">
                    <div class="ecocart-price-hero__card-header ecocart-price-hero__card-header--green">
                        <img
                            class="lazyload"
                            data-src="{{ logo_2.src }}"
                            data-sizes="auto"
                            alt="{{ logo_2.alt|e }}"
                        />
                    </div>
                    <div class="ecocart-price-hero__card-content">
                        <h3>{{ title_2 }}</h3>
                        <p>{{ content_2 }}</p>
                        <div class="ecocart-price-hero__card-link">
                            <a class="btn btn--black" href="{{ link_2.url }}">{{ link_2.title }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>