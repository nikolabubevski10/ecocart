<section class="ecocart-shop">
    <div class="container">
        <div class="ecocart-shop__dot">
            <img
                class="lazyload"
                data-src="{{ dot }}"
                data-sizes="auto"
                alt="dot image"
            />
        </div>
        <div class="ecocart-shop__dot-mobile">
            <img
                class="lazyload"
                data-src="{{ dot_mobile }}"
                data-sizes="auto"
                alt="dot image"
            />
        </div>
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-shop__row">
            <div class="ecocart-shop__right-col">
                <video id="js-ecocart-shop__video" muted autoplay loop>
                    <source src="{{ video.url }}" type="{{ video.mime_type }}">
                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="ecocart-shop__left-col">
                <h2>{{ title }}</h2>
                {% for index, item in list %}
                    <div class="ecocart-shop__left-item-wrapper">
                        <div 
                            id="js-ecocart-shop__time-label-{{ index }}"
                            class="
                                ecocart-shop__left-item
                                {% if index == 0 %}ecocart-shop__left-item--active{% endif %}
                            "
                            data-time="{{ item.time_second }}"
                        >
                            <div
                                class="
                                    ecocart-shop__left-item-circle 
                                    {% if index + 1 < list|length %}ecocart-shop__left-item-circle--has-dot{% endif %}
                                "
                            >{{ index + 1 }}.</div>
                            <div class="ecocart-shop__left-item-info">
                                <div class="ecocart-shop__left-title">{{ item.title }}</div>
                                {{ item.content|apply_filters('the_content') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<script>
    window.ecocartShopVideoTimeSeconds = [
        {% for item in list %}
            {{ item.time_second }},
        {% endfor %}
    ]
</script>