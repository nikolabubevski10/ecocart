<section class="ecocart-project-slider">
    <div class="container">
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-project-slider__row">
            <div class="ecocart-project-slider__right-col" is="ecocart-project-slider">
                <div class="ecocart-project-slider__slider">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            {% for item in image_list %}
                                <div class="swiper-slide">
                                    <div class="ecocart-project-slider__card">
                                        <div class="ecocart-project-slider__card-img">
                                            <img
                                                class="lazyload"
                                                src="{{ placeholderImage(220, 220) }}"
                                                data-src="{{ item.image.src|resizeDynamic(220, 220) }}"
                                                data-srcset="{{ item.image.src|resizeDynamic(220, 220) }} 1x, {{ item.image.src|resizeDynamic(440, 440) }} 2x"
                                                data-sizes="auto"
                                                alt="{{ item.image.alt|e }}"
                                            />
                                        </div>
                                        <div class="ecocart-project-slider__card-title">{{ item.title }}</div>        
                                        <div class="ecocart-project-slider__card-location">{{ item.location }}</div>        
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="ecocart-project-slider__slider-nav-row">
                    <div class="ecocart-project-slider__slider-nav-item ecocart-project-slider__slider-nav-item--prev">
                        <svg width="36" height="24" viewBox="0 0 36 24" fill="none"><path d="M34 13.5C34.8284 13.5 35.5 12.8284 35.5 12C35.5 11.1716 34.8284 10.5 34 10.5L34 13.5ZM0.939339 10.9393C0.353554 11.5251 0.353554 12.4749 0.939339 13.0607L10.4853 22.6066C11.0711 23.1924 12.0208 23.1924 12.6066 22.6066C13.1924 22.0208 13.1924 21.0711 12.6066 20.4853L4.12132 12L12.6066 3.51472C13.1924 2.92893 13.1924 1.97918 12.6066 1.3934C12.0208 0.80761 11.0711 0.807609 10.4853 1.3934L0.939339 10.9393ZM34 10.5L2 10.5L2 13.5L34 13.5L34 10.5Z" fill="#FFFFFE"/></svg>
                    </div>
                    <div class="ecocart-project-slider__slider-nav-item ecocart-project-slider__slider-nav-item--next">
                        <svg width="36" height="24" viewBox="0 0 36 24" fill="none"><path d="M34 13.5C34.8284 13.5 35.5 12.8284 35.5 12C35.5 11.1716 34.8284 10.5 34 10.5L34 13.5ZM0.939339 10.9393C0.353554 11.5251 0.353554 12.4749 0.939339 13.0607L10.4853 22.6066C11.0711 23.1924 12.0208 23.1924 12.6066 22.6066C13.1924 22.0208 13.1924 21.0711 12.6066 20.4853L4.12132 12L12.6066 3.51472C13.1924 2.92893 13.1924 1.97918 12.6066 1.3934C12.0208 0.80761 11.0711 0.807609 10.4853 1.3934L0.939339 10.9393ZM34 10.5L2 10.5L2 13.5L34 13.5L34 10.5Z" fill="#FFFFFE"/></svg>
                    </div>
                </div>
            </div>
            <div class="ecocart-project-slider__left-col">
                <div class="ecocart-project-slider__left-content">
                    <h2>{{ title }}</h2>
                    <div class="ecocart-project-slider__link">
                        <a class="btn btn--black" href="{{ link.url }}">{{ link.title }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>