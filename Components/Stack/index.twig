<section class="ecocart-stack">
    <div class="container">
        <div class="dot-title">
            <h3>{{ title }}</h3>
        </div>
        <div class="ecocart-stack__grid">
            {% for item in list %}
                <div class="ecocart-stack__img">
                    <img
                        class="lazyload"
                        data-src="{{ item.image.src }}"
                        data-sizes="auto"
                        alt="{{ item.image.alt|e }}"
                    />
                </div>
            {% endfor %}
        </div>
        <div class="ecocart-stack__link">
            <a class="arrow-link arrow-link--black" href="{{ link.url }}">{{ link.title }}</a>
        </div>
    </div>
</section>