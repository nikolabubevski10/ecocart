<section class="ecocart-block-content-image-down {% if dark_mode %}ecocart-block-content-image-down--dark{% endif %}">
    <div class="container">
        {% if has_dot_image %}
            <div class="ecocart-block-content-image-down__dot-desktop">
                <img
                    class="lazyload"
                    data-src="{{ dot_image_desktop }}"
                    data-sizes="auto"
                    alt="dot desktop image"
                />
            </div>
            <div class="ecocart-block-content-image-down__dot-mobile">
                <img
                    class="lazyload"
                    data-src="{{ dot_image_mobile }}"
                    data-sizes="auto"
                    alt="dot mobile image"
                />
            </div>
        {% endif %}
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-block-content-image-down__info-wrapper">
            <div class="ecocart-block-content-image-down__img {% if not link %}ecocart-block-content-image-down__img--more-top-space{% endif %} {% if animation == 'ecocart-project-network'%}ecocart-block-content-image-down__img--mobile-hide{% endif %}">
                {% if animation != 'none' %}
                    <div id="js-ecocart-block-content-image-down__animation--{{ animation }}" class="ecocart-lottie" data-animation-src="{{ animation_list[animation] }}"></div>
                {% else %}
                    <img
                        class="lazyload"
                        data-src="{{ image.src }}"
                        data-sizes="auto"
                        alt="{{ image.alt|e }}"
                    />
                {% endif %}
            </div>
            <div class="ecocart-block-content-image-down__content">
                <h2>{{ title }}</h2>
                {{ content|apply_filters('the_content') }}
                {% if link %}
                    <div class="ecocart-block-content-image-down__link">
                        <a class="btn btn--black" href="{{ link.url }}">{{ link.title }}</a>
                    </div>
                {% endif %}
            </div>
            {% if animation == 'ecocart-project-network' and image_mobile %}
                <div class="ecocart-block-content-image-down__ecocart-project-network-mobile-img">
                    <img
                        class="lazyload"
                        data-src="{{ image_mobile.src }}"
                        data-sizes="auto"
                        alt="{{ image_mobile.alt|e }}"
                    />
                </div>
            {% endif %}
        </div>
    </div>
</section>