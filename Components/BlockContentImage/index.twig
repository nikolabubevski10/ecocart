<section class="ecocart-block-content-image">
    <div class="container">
        <div class="ecocart-block-content-image__dot-1-desktop">
            <img
                class="lazyload"
                data-src="{{ dot_1_desktop }}"
                data-sizes="auto"
                alt="dot 1 desktop"
            />
        </div>
        <div class="ecocart-block-content-image__dot-2-desktop">
            <img
                class="lazyload"
                data-src="{{ dot_2_desktop }}"
                data-sizes="auto"
                alt="dot 2 desktop"
            />
        </div>
        <div class="ecocart-block-content-image__dot-mobile">
            <img
                class="lazyload"
                data-src="{{ dot_mobile }}"
                data-sizes="auto"
                alt="dot mobile"
            />
        </div>
        <div class="dot-title">
            <h3>{{ pre_title_1 }}</h3>
        </div>
        <div class="ecocart-block-content-image__row">
            <div class="ecocart-block-content-image__image-1">
                {% if animation == 'none' %}
                    <img
                        class="lazyload"
                        data-src="{{ image_1.src }}"
                        data-sizes="auto"
                        alt="{{ image_1.alt|e }}"
                    />
                {% else %}
                    <div id="js-ecocart-block-content-image__animation-{{ animation }}-1" class="ecocart-lottie" data-animation-src="{{ animation_list[0] }}"></div>
                {% endif %}
            </div>
            <div class="ecocart-block-content-image__content">
                <h2>{{ title_1 }}</h2>
                <p>{{ content_1 }}</p>
            </div>
        </div>
        <div class="ecocart-block-content-image__pre-title">
            <div class="dot-title">
                <h3>{{ pre_title_2 }}</h3>
            </div>
        </div>
        <div class="ecocart-block-content-image__row">
            <div class="ecocart-block-content-image__image-2">
                {% if animation == 'none' %}
                    <img
                        class="lazyload"
                        data-src="{{ image_2.src }}"
                        data-sizes="auto"
                        alt="{{ image_2.alt|e }}"
                    />
                {% else %}
                    <div id="js-ecocart-block-content-image__animation-{{ animation }}-2" class="ecocart-lottie" data-animation-src="{{ animation_list[1] }}"></div>
                {% endif %}
            </div>
            <div class="ecocart-block-content-image__content">
                <h2>{{ title_2 }}</h2>
                <p>{{ content_2 }}</p>
                <div class="ecocart-block-content-image__link">
                    <a class="btn btn--black" href="{{ link_1.url }}">{{ link_1.title }}</a>
                </div>
            </div>
        </div>
        <div class="ecocart-block-content-image__row">
            <div class="ecocart-block-content-image__image-2">
                {% if animation == 'none' %}
                    <img
                        class="lazyload"
                        data-src="{{ image_3.src }}"
                        data-sizes="auto"
                        alt="{{ image_3.alt|e }}"
                    />
                {% else %}
                    <div id="js-ecocart-block-content-image__animation-{{ animation }}-3" class="ecocart-lottie" data-animation-src="{{ animation_list[2] }}"></div>
                {% endif %}
            </div>
            <div class="ecocart-block-content-image__content">
                <h2>{{ title_3 }}</h2>
                <p>{{ content_3 }}</p>
                <div class="ecocart-block-content-image__link">
                    <a class="btn btn--black" href="{{ link_2.url }}">{{ link_2.title }}</a>
                </div>
            </div>
        </div>
    </div>
</section>