<section class="ecocart-solution">
    <div class="container">
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-solution__content">
            {{ content|apply_filters('the_content') }}
        </div>
        <div class="ecocart-solution__grid">
            {% for solution in solution_list %}
                <div class="ecocart-solution__card">
                    <div class="ecocart-solution__img">
                        <img
                            class="lazyload"
                            src="{{ placeholderImage(360, 360) }}"
                            data-src="{{ solution.image.src|resizeDynamic(360, 360) }}"
                            data-srcset="{{ solution.image.src|resizeDynamic(360, 360) }} 1x, {{ solution.image.src|resizeDynamic(720, 720) }} 2x"
                            data-sizes="auto"
                            alt="{{ solution.image.alt|e }}"
                        />
                    </div>
                    <div class="ecocart-solution__title">{{ solution.title }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>