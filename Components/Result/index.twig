<section class="ecocart-result">
    <div class="container">
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-result__content">
            {{ content|apply_filters('the_content') }}
        </div>
        <div class="ecocart-result__grid">
            {% for index, result in result_list %}
                <div class="ecocart-result__card">
                    <div class="ecocart-result__card-img">
                        {% if animation == 'none' %}
                            <img
                                class="lazyload"
                                data-src="{{ result.image.src }}"
                                data-sizes="auto"
                                alt="{{ result.image.alt|e }}"
                            />
                        {% else %}
                            <div id="js-ecocart-result__{{ animation }}-animation-{{ index }}" class="ecocart-lottie" data-animation-src="{{ animation_list[index] }}"></div>
                        {% endif %}
                    </div>
                    <div class="ecocart-result__card-val">{{ result.value }}</div>
                    <div class="ecocart-result__card-title">{{ result.title }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>