<section class="ecocart-industry-list">
    <div class="container">
        <div class="ecocart-industry-list__img">
            <img
                class="lazyload"
                data-src="{{ image }}"
                data-sizes="auto"
                alt="dot"
            />
        </div>
        <div class="dot-title">
            <h3>{{ title }}</h3>
        </div>
        <div class="ecocart-industry-list__row">
            {% for index, item in list %}
                <div class="ecocart-industry-list__col">
                    <div class="ecocart-industry-list__card">
                        <div class="ecocart-industry-list__card-row">
                            <div class="ecocart-industry-list__card-left-col">
                                {% if has_animation_icon %}
                                    <div id="js-ecocart-industry-list__card-animation-{{ index }}" class="ecocart-lottie" data-animation-src="{{ animation_list[index] }}"></div>
                                {% else %}
                                    <img
                                        class="lazyload"
                                        data-src="{{ item.image.src }}"
                                        data-sizes="auto"
                                        alt="{{ item.image.alt|e }}"
                                    />
                                {% endif %}
                            </div>
                            <div class="ecocart-industry-list__card-right-col">
                                <h3>{{ item.title }}</h3>
                                <div class="ecocart-industry-list__card-link">
                                    <a class="arrow-link" href="{{ item.link.url }}">{{ item.link.title }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>