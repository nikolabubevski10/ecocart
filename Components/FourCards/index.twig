<section class="ecocart-four-cards">
    <div class="container">
        <div class="ecocart-four-cards__grid">
            {% for card in card_list %}
                <div class="ecocart-four-cards__card">
                    <div class="ecocart-four-cards__card-img">
                        <img
                            class="lazyload"
                            data-src="{{ card.image.src }}"
                            data-sizes="auto"
                            alt="{{ card.image.alt|e }}"
                        />
                    </div>
                    <div class="ecocart-four-cards__card-content">
                        <h3>{{ card.title }}</h3>
                        <p>{{ card.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>