<section class="ecocart-values">
    <div class="container">
        <div class="dot-title">
            <h3>{{ pre_title }}</h3>
        </div>
        <div class="ecocart-values__row">
            {% for index, value in value_list %}
                <div class="ecocart-values__col">
                    {% if animation == 'none' %}
                        <img
                            class="lazyload"
                            data-src="{{ value.image.src }}"
                            data-sizes="auto"
                            alt="{{ value.image.alt|e }}"
                        />
                    {% else %}
                        <div id="js-ecocart-values__{{ animation }}-animation-{{ index }}" class="ecocart-lottie" data-animation-src="{{ animation_list[index] }}"></div>                        
                    {% endif %}
                    <h3>{{ value.title }}</h3>
                </div>
            {% endfor %}
        </div>
    </div>
</section>